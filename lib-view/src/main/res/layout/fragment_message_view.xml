<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="ma10.megusurin.MessageViewFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_back"
        android:layout_margin="18dp"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignBounds">

        <ImageView
            android:id="@+id/message_image_char"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_rowSpan="2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/message_text_hp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="999"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="18sp"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/message_text_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="18sp"
            android:textColor="#FFF"
            />

    </GridLayout>


    <TextView
        android:id="@+id/message_text_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_drive_70"
        android:text=" \n"
        android:textSize="28sp"
        android:layout_margin="18dp"
        android:textColor="#000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
